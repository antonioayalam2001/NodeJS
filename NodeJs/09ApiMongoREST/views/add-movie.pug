doctype html
html(lang=es)
    head
    include templates/header

body
    include templates/navBar
    h1(style="text-align:center;")= title
    a.button(href="/") Regresar
    div.container__form
        form.form(method="POST" action= data? `/actualizar/${data.movie_id}/elOtroParam`: '/')
            h1 Agrega una nueva pelicula!
            fieldset
                div.container
                    if (data)
                        label(for="movie_id") IMDB id:
                        input#movie_id(type="text", name="movie_id", required value= data?data.movie_id: '' disabled)
                        input#movie_id(type="text", name="movie_id", required value= data?data.movie_id: '' hidden)
                        input(type="hidden", name="_method",value="PUT")
                    else
                        label(for="movie_id") IMDB id:
                        input#movie_id(type="text", name="movie_id", required value= data?data.movie_id: '' )
                div.container
                    label(for="title") Título:
                    input#title(type="text", name="title", required value= data?data.title: '')
                div.container
                    label(for="release_year") Año:
                    input#release_year(type="text", name="release_year", required value= data?data.release_year: '')
                div.container
                    label(for="rating") Calificación:
                    input#rating(type="text", name="rating", required value= data?data.rating: '')
                div.container
                    label(for="image") Poster:
                    input#image(type="text", name="image", required value= data?data.image: '')
                div.container
                    button.button(type="submit", value="Agregar") Confirmar
